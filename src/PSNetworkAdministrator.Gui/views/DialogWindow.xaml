<UserControl x:Class="PSNetworkAdministrator.Gui.Views.DialogWindow"
            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
            xmlns:converters="clr-namespace:PSNetworkAdministrator.Gui.Converters"
            xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">
    
    <!-- define the converter as a resource -->
    <UserControl.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    </UserControl.Resources>
    
    <!-- define dialog window -->
    <Border Background="#80000000" Visibility="{Binding DataContext.IsDialogVisible, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource BoolToVisibilityConverter}}">
        <materialDesign:Card Width="350" VerticalAlignment="Center" HorizontalAlignment="Center" UniformCornerRadius="8" materialDesign:ElevationAssist.Elevation="Dp16" Background="White" Padding="24">
            <StackPanel>
                <TextBlock Text="{Binding DataContext.DialogMessage, RelativeSource={RelativeSource AncestorType=Window}}" Style="{StaticResource MaterialDesignBody1TextBlock}" TextWrapping="Wrap" HorizontalAlignment="Center"/>
                <Button Command="{Binding DataContext.CloseDialogCommand, RelativeSource={RelativeSource AncestorType=Window}}" Style="{StaticResource MaterialDesignRaisedButton}" Width="100" Margin="0,20,0,0" HorizontalAlignment="Center">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="Check" Margin="0,0,8,0" VerticalAlignment="Center"/>
                        <TextBlock Text="OK" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </materialDesign:Card>
    </Border>
</UserControl>