<UserControl x:Class="PSNetworkAdministrator.Gui.Views.DialogWindow"
            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
            xmlns:converters="clr-namespace:PSNetworkAdministrator.Gui.Converters">
    
    <!-- define the converter as a resource -->
    <UserControl.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    </UserControl.Resources>
    
    <!-- define dialog window -->
    <Border Background="#80000000" Visibility="{Binding DataContext.IsDialogVisible, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource BoolToVisibilityConverter}}">
        <Border Background="White" Width="300" Height="150" VerticalAlignment="Center" HorizontalAlignment="Center" BorderBrush="Black" BorderThickness="1">
            <StackPanel Margin="20">
                <TextBlock Text="{Binding DataContext.DialogMessage, RelativeSource={RelativeSource AncestorType=Window}}" FontSize="14"/>
                <Button Content="OK" Width="80" Margin="0,20,0,0" Command="{Binding DataContext.CloseDialogCommand, RelativeSource={RelativeSource AncestorType=Window}}"/>
            </StackPanel>
        </Border>
    </Border>
</UserControl>