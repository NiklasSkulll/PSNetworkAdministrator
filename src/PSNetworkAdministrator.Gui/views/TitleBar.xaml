<UserControl x:Class="PSNetworkAdministrator.Gui.Views.TitleBar"
            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
            xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">
    
    <!-- define title bar -->
    <Grid Background="#1E88E5">
        <!-- title -->
        <TextBlock Text="PSNetworkAdministrator" Style="{StaticResource MaterialDesignBody1TextBlock}" Foreground="White" VerticalAlignment="Center" Margin="15,0,0,0"/>
        <!-- window control buttons -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,8,0">
            <Button Width="45" Height="45" Command="{Binding TitleBarVM.MinimizeCommand}" Style="{StaticResource MaterialDesignFlatButton}" Background="Transparent">
                <materialDesign:PackIcon Kind="WindowMinimize" Width="15" Height="15" Foreground="White"/>
            </Button>
            <Button Width="45" Height="45" Command="{Binding TitleBarVM.MaximizeCommand}" Style="{StaticResource MaterialDesignFlatButton}" Background="Transparent">
                <materialDesign:PackIcon Kind="{Binding TitleBarVM.MaximizeIconKind}" Width="15" Height="15" Foreground="White"/>
            </Button>
            <Button Width="45" Height="45" Command="{Binding TitleBarVM.CloseCommand}" Style="{StaticResource MaterialDesignFlatButton}" Background="Transparent">
                <materialDesign:PackIcon Kind="Close" Width="15" Height="15" Foreground="White"/>
            </Button>
        </StackPanel>
    </Grid>
</UserControl>